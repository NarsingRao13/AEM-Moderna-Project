<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="ConditionBased-Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <items
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <feature-type
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Select Size"
                                        fieldLabel="Feature-Type"
                                        name="./featureType">
                                        <items jcr:primaryType="nt:unstructured">
                                            <def
                                                jcr:primaryType="nt:unstructured"
                                                text="Select"
                                                value=""/>
                                            <feature-1
                                                jcr:primaryType="nt:unstructured"
                                                text="Image-Text-List"
                                                value="feature-1"/>
                                            <feature-2
                                                jcr:primaryType="nt:unstructured"
                                                text="Text-Image"
                                                value="feature-2"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-dropdown-showhide-target=".productType-showhide-target"/>
                                    </feature-type>
                                    <feature-1
                                        granite:class="productType-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        fieldDescription="Feature-1"
                                        fieldLabel="Select Service Icon Background Color">
                                        <items jcr:primaryType="nt:unstructured">
                                            <service-title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Can not be empty"
                                                fieldLabel="Title"
                                                name="./title"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="feature-1"/>
                                    </feature-1>
                                    <feature-2
                                        granite:class="productType-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        fieldDescription="Select Size"
                                        fieldLabel="Feature-2">
                                        <items jcr:primaryType="nt:unstructured">
                                            <number
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldDescription="Can not be empty"
                                                fieldLabel="Number"
                                                name="./number"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="feature-2"/>
                                    </feature-2>
                                </items>
                            </column>
                        </items>
                    </columns>
                </items>
            </items>
        </items>
    </content>
</jcr:root>
