<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Feature Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <items
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <feature-image
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                        fieldDescription="Select Path"
                                        fieldLabel="Feature Image"
                                        name="./featureImage"
                                        rootPath="/content/dam/Moderna/"/>
                                    <select-contentStyle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Select Size"
                                        fieldLabel="Select Service Icon Background Color"
                                        name="./contentStyle">
                                        <items jcr:primaryType="nt:unstructured">
                                            <def
                                                jcr:primaryType="nt:unstructured"
                                                text="Content Style"
                                                value=""/>
                                            <pt-4
                                                jcr:primaryType="nt:unstructured"
                                                text="Pt-4"
                                                value="pt-4"/>
                                            <pt-5
                                                jcr:primaryType="nt:unstructured"
                                                text="Pt-5"
                                                value="pt-5"/>
                                        </items>
                                    </select-contentStyle>
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Can not be empty"
                                        fieldLabel="Title"
                                        name="./title"/>
                                    <select-subTitle-Style
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Select Size"
                                        fieldLabel="Sub Title Style"
                                        name="./subTitleStyle">
                                        <items jcr:primaryType="nt:unstructured">
                                            <def
                                                jcr:primaryType="nt:unstructured"
                                                text="Sub Title Text Style"
                                                value=""/>
                                            <normla
                                                jcr:primaryType="nt:unstructured"
                                                text="Normal"
                                                value=""/>
                                            <italic
                                                jcr:primaryType="nt:unstructured"
                                                text="Italic"
                                                value="fst-italic"/>
                                        </items>
                                    </select-subTitle-Style>
                                    <sub-title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Can not be empty"
                                        fieldLabel="Sub-Title"
                                        name="./subTitle"/>
                                    <bullet-points-multifield
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldLabel="Details">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./bulletPoints">
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <list-data
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Mandatory Field"
                                                            fieldLabel="List-Data"
                                                            name="./listData"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </bullet-points-multifield>
                                </items>
                            </column>
                        </items>
                    </columns>
                </items>
            </items>
        </items>
    </content>
</jcr:root>
